@charset "utf-8"
@import "../base"

.goods-list
    .good-image
        width 60px
.good-upload
    width 100%
    height 100%
    opacity 0
    top 0
    left 0
    position absolute
.good-upload-url
    width 200px

.sc-goods-steps
    min-width 700px
    max-width 800px
    position absolute
    z-index 100
    left 140px
    top 20px
    .wizard
        .content
            min-height 0
            .body
                float none
                position inherit
                height auto
                padding 2.5% 2.5% 0 2.5%
                width 100%
    .goods-steps-close
        padding 6px 10px
        margin-top -7px
.goods-cart-list
    .good-image
        width 50px
    .table-item-count
        width 136px
        input
            text-align center
